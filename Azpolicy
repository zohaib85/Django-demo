{
  "properties": {
    "displayName": "Standard Logic App: Enforce HTTPS and Disable FTP",
    "policyType": "Custom",
    "mode": "Indexed",
    "description": "This DeployIfNotExists policy ensures Standard Logic Apps (Microsoft.Web/sites) are configured for HTTPS only and have FTP deployment disabled.",
    "metadata": {
      "category": "Integration",
      "version": "1.0.0"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": [
          "DeployIfNotExists",
          "Disabled"
        ],
        "defaultValue": "DeployIfNotExists"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Web/sites"
          },
          {
            "anyOf": [
              {
                "field": "Microsoft.Web/sites/httpsOnly",
                "equals": false
              },
              {
                "field": "Microsoft.Web/sites/ftpsState",
                "notEquals": "Disabled"
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "type": "Microsoft.Web/sites",
          "deploymentScope": "resourceGroup",
          "existenceCondition": {
            "allOf": [
              {
                "field": "Microsoft.Web/sites/httpsOnly",
                "equals": true
              },
              {
                "field": "Microsoft.Web/sites/ftpsState",
                "equals": "Disabled"
              }
            ]
          },
          "deployment": {
            "properties": {
              "mode": "incremental",
              "template": {
                "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                "contentVersion": "1.0.0.0",
                "parameters": {
                  "resourceName": {
                    "type": "string"
                  }
                },
                "resources": [
                  {
                    "type": "Microsoft.Web/sites",
                    "apiVersion": "2021-02-01",
                    "name": "[parameters('resourceName')]",
                    "location": "[resourceGroup().location]",
                    "properties": {
                      "httpsOnly": true
                    }
                  },
                  {
                    "type": "Microsoft.Web/sites/config",
                    "apiVersion": "2021-02-01",
                    "name": "[concat(parameters('resourceName'), '/web')]",
                    "dependsOn": [
                      "[resourceId('Microsoft.Web/sites', parameters('resourceName'))]"
                    ],
                    "properties": {
                      "ftpsState": "Disabled"
                    }
                  }
                ]
              },
              "parameters": {
                "resourceName": {
                  "value": "[field('name')]"
                }
              }
            }
          }
        }
      }
    }
  }
}
