{
  "properties": {
    "displayName": "Logic App Standard: Disable FTP/FTPS",
    "policyType": "Custom",
    "mode": "Indexed",
    "description": "DeployIfNotExists policy to disable FTP/FTPS for Standard Logic Apps.",
    "metadata": {
      "category": "Integration"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Policy effect"
        },
        "allowedValues": [
          "DeployIfNotExists",
          "Disabled"
        ],
        "defaultValue": "DeployIfNotExists"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Web/sites"
          },
          {
            "field": "kind",
            "contains": "workflowapp"
          },
          {
            "field": "Microsoft.Web/sites/ftpsState",
            "notEquals": "Disabled"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "type": "Microsoft.Web/sites/config",
          "name": "[concat(field('name'), '/web')]",
          "deploymentScope": "resourceGroup",
          "existenceCondition": {
            "field": "Microsoft.Web/sites/ftpsState",
            "equals": "Disabled"
          },
          "deployment": {
            "mode": "incremental",
            "template": {
              "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
              "contentVersion": "1.0.0.0",
              "parameters": {
                "siteName": {
                  "type": "string"
                }
              },
              "resources": [
                {
                  "type": "Microsoft.Web/sites/config",
                  "apiVersion": "2022-03-01",
                  "name": "[concat(parameters('siteName'), '/web')]",
                  "properties": {
                    "ftpsState": "Disabled"
                  }
                }
              ]
            },
            "parameters": {
              "siteName": {
                "value": "[field('name')]"
              }
            }
          }
        }
      }
    }
  }
}
