{
  "properties": {
    "displayName": "Standard Logic App: Enforce HTTPS and Disable FTP",
    "policyType": "Custom",
    "mode": "Indexed",
    "description": "DeployIfNotExists for HTTPS and FTP on Standard Logic Apps",
    "metadata": {
      "category": "Integration",
      "version": "1.0.0"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "metadata": {
          "displayName": "Effect",
          "description": "Enable or disable the execution of the policy"
        },
        "allowedValues": [
          "DeployIfNotExists",
          "Disabled"
        ],
        "defaultValue": "DeployIfNotExists"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Web/sites"
          },
          {
            "anyOf": [
              {
                "field": "Microsoft.Web/sites/httpsOnly",
                "equals": false
              },
              {
                "field": "Microsoft.Web/sites/ftpsState",
                "notEquals": "Disabled"
              }
            ]
          }
        ]
      },
      "then": {
        "effect": "DeployIfNotExists",
        "details": {
          "type": "Microsoft.Web/sites",
          "deploymentScope": "resourceGroup",
          "existenceCondition": {
            "allOf": [
              {
                "field": "Microsoft.Web/sites/httpsOnly",
                "equals": true
              },
              {
                "field": "Microsoft.Web/sites/ftpsState",
                "equals": "Disabled"
              }
            ]
          }
        }
      }
    }
  }
}
