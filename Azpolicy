{
  "properties": {
    "displayName": "Logic App Standard: Enforce FTPS Disabled",
    "policyType": "Custom",
    "mode": "Indexed",
    "description": "Ensures that Logic App Standard disables FTP/FTPS by configuring siteConfig.ftpsState to Disabled",
    "metadata": {
      "category": "Integration"
    },
    "parameters": {
      "effect": {
        "type": "String",
        "allowedValues": [
          "DeployIfNotExists",
          "Disabled"
        ],
        "defaultValue": "DeployIfNotExists"
      }
    },
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Web/sites"
          },
          {
            "field": "kind",
            "contains": "workflowapp"   // Identifies Logic App Standard
          },
          {
            "field": "Microsoft.Web/sites/config/ftpsState",
            "notEquals": "Disabled"
          }
        ]
      },
      "then": {
        "effect": "[parameters('effect')]",
        "details": {
          "type": "Microsoft.Web/sites/config",
          "roleDefinitionIds": [
            "/providers/Microsoft.Authorization/roleDefinitions/b24988ac-6180-42a0-ab88-20f7382dd24c"  // Contributor
          ],
          "deployment": {
            "properties": {
              "mode": "incremental",
              "template": {
                "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                "contentVersion": "1.0.0.0",
                "resources": [
                  {
                    "type": "Microsoft.Web/sites/config",
                    "apiVersion": "2022-03-01",
                    "name": "[concat(field('name'), '/web')]",
                    "properties": {
                      "ftpsState": "Disabled"
                    }
                  }
                ]
              }
            }
          }
        }
      }
    }
  }
}
