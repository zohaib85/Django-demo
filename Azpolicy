{
  "properties": {
    "displayName": "Deploy secure settings for Standard Logic Apps",
    "policyType": "Custom",
    "mode": "Indexed",
    "description": "Automatically configures FTP state, HTTP version, and HTTPS-only settings for Standard Logic Apps.",
    "metadata": {
      "version": "1.0.0",
      "category": "Logic Apps"
    },
    "parameters": {},
    "policyRule": {
      "if": {
        "allOf": [
          {
            "field": "type",
            "equals": "Microsoft.Web/sites"
          },
          {
            "field": "kind",
            "like": "functionapp"
          },
          {
            "field": "tags['logicAppType']",
            "equals": "standard"
          }
        ]
      },
      "then": {
        "effect": "deployIfNotExists",
        "details": {
          "type": "Microsoft.Web/sites/config",
          "name": "web",
          "roleDefinitionIds": [
            "/providers/Microsoft.Authorization/roleDefinitions/contributor"
          ],
          "deployment": {
            "properties": {
              "mode": "incremental",
              "template": {
                "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
                "contentVersion": "1.0.0.0",
                "resources": [
                  {
                    "type": "Microsoft.Web/sites/config",
                    "apiVersion": "2022-03-01",
                    "name": "[concat(parameters('siteName'), '/web')]",
                    "properties": {
                      "ftpsState": "Disabled",
                      "http20Enabled": true,
                      "httpsOnly": true
                    }
                  }
                ]
              },
              "parameters": {
                "siteName": {
                  "value": "[field('name')]"
                }
              }
            }
          }
        }
      }
    }
  }
}
